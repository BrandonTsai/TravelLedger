<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="brandon.tsai.travelledger.MenuActivity"
    android:orientation="vertical"
    android:background="@color/switch_thumb_normal_material_light">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/background_light"
        android:layout_gravity="center_vertical">

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/button_back"
            android:background="@drawable/left1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Menu"
            android:id="@+id/textView3"
            android:textColor="#1da865"
            android:textSize="26dp"
            android:textStyle="bold|normal|italic"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginRight="45dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_marginTop="2dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imageView2"
                android:layout_gravity="center_vertical"
                android:background="@android:drawable/ic_menu_manage" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Setting"
                android:id="@+id/textView_setting"
                android:padding="10dp"
                android:textColor="@color/abc_primary_text_material_light"
                android:clickable="true"
                android:textSize="22dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_marginTop="2dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imageView4"
                android:layout_gravity="center_vertical"
                android:src="@android:drawable/ic_input_add" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Note"
                android:id="@+id/textView_new_note"
                android:padding="10dp"
                android:textColor="@color/abc_primary_text_material_light"
                android:clickable="true"
                android:textSize="22dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sheets"
            android:id="@+id/textView2"
            android:textColor="@color/secondary_text_default_material_light"
            android:padding="10dp"
            android:textSize="22dp"
            android:textStyle="bold|italic" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listView_sheets"
            android:background="@android:color/white" />
    </LinearLayout>
</LinearLayout>
